<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
        <title>My Blogs</title>
</head>

<body style="color:aliceblue">
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom border-body" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand me-2 pe-4 text-white border-end border-gray logo" href="/"
                style="display: flex; align-items:center">
                <img src="/images/favicon.png" width="40px" alt="Bloggify">
                <h5 class="navbar" style="font-family: 'serif'; margin-left: 10px; margin-top: 8px">
                    Bloggify
                </h5>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active ps-4 me-2 text-white" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active ps-4 text-white" href="/blog/add-new">Add Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active ms-4 text-white btn btn-danger" href="/user/logout"
                            onclick="return confirm('Confirm Logout?')">Logout</a>
                        </li>
                </ul>
            </div>
        </div>
    </nav>
    <% if (blogs.length> 0) { %>
        <div class="blog d-flex flex-wrap p-0 ps-2 pt-2" data-bs-theme="dark">
                <% blogs.forEach(blog=> { %>
                    <div class="card shadow bg-body-tertiary rounded">
                        <div class="card-body p-0" style="width: 96%; height:96%;margin:2%">
                            <div class="title d-flex align-items-center" style="height:60%;padding-left:5% ;overflow: hidden;">
                                <h5 class="card-title" style="display: -webkit-box;line-clamp: 2;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;text-overflow: ellipsis;white-space: normal;line-height: 1.2em;max-height: 2.5em;  ">
                                    <%= blog.title %>
                                        </h5>
                            </div>
                            <div class="view m-0 p-0 d-flex align-items-center justify-content-center" style="height: 40%;">
                                <a href="/blog/<%= blog._id %>" class="btn btn-light m-0">
                                    View Blog</a>
                            </div>
                            
                        </div>
                    </div>
                <% }) %>
        </div>
            <% } else { %>
                <div style="width:30%;position:absolute ;top: 50%;left:35%">
                    <h4 style="color: rgb(83, 81, 81); font-family:serif; font-weight:700">
                        Create your first Blog!
                    </h4>
                </div>
                <% } %>
        <%- include("./partials/script") %>
</body>

</html>